<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1066pt"
    android:layout_height="700pt"
    android:background="@drawable/border_diaog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_marginLeft="1006pt"
        android:layout_marginTop="18pt"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:background="@mipmap/ic_close"/>
    <LinearLayout
        android:layout_marginTop="80pt"
        android:id="@+id/step2_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <RelativeLayout
            android:id="@+id/detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/materiel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Time Managerment"
                android:textColor="@color/black"
                android:textSize="40px" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="158pt"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18.5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Service Time："
                    android:textColor="@color/black"
                    android:textSize="30px" />

                <com.manage.tn.auv.widget.MClearEditText
                    android:id="@+id/serviceTime"
                    android:layout_width="match_parent"
                    android:layout_height="80pt"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:drawablePadding="6dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="please enter the service time"
                    android:textColor="@color/gray50"
                    android:textColorHint="@color/gray50"
                    android:textSize="30px"
                    android:editable="false"
                    app:mClearEditText_disableClear="false"
                    app:mClearEditText_showBottomLine="true" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18.5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Locking Time："
                    android:textColor="@color/black"
                    android:textSize="30px" />

                <com.manage.tn.auv.widget.MClearEditText
                    android:id="@+id/lockingTime"
                    android:layout_width="match_parent"
                    android:layout_height="80pt"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:drawablePadding="6dp"
                    android:editable="true"
                    android:gravity="center"
                    android:hint="please limit in hours can open the compartment after return the item"
                    android:textColor="@color/gray50"
                    android:textColorHint="@color/gray50"
                    android:textSize="30px"
                    app:mClearEditText_disableClear="false"
                    app:mClearEditText_showBottomLine="true" />
            </TableRow>


        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="150pt"
            android:orientation="horizontal">

            <Button
                android:id="@+id/canclebtn"
                style="@style/light_gray_btn"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:background="@color/white50"
                android:text="Cancel"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_ok"
                style="@style/dark_blue_btn"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@color/blue50"
                android:text="Confirm"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
