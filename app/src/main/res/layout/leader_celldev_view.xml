<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230pt"
    android:layout_height="346pt"
    android:layout_margin="2pt"
    android:background="@drawable/nosel_border_bg"
    android:orientation="vertical"
    android:padding="0.5pt"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10pt"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/nosel_border_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deviceImg"
            android:layout_width="72pt"
            android:layout_height="123pt"
            android:layout_marginHorizontal="80pt"
            android:layout_marginTop="23pt"
            android:background="@mipmap/img1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11pt"
            android:gravity="center_horizontal"
            android:text="TAG No."
            android:textColor="@color/gray50"
            android:textSize="20px" />

        <TextView
            android:id="@+id/deviceNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4pt"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:text=""
            android:textColor="@color/black"
            android:textSize="28px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/dark_blue_btn"
        android:layout_width="190pt"
        android:layout_height="70pt"
        android:layout_gravity="center"
        android:layout_marginLeft="50pt"
        android:layout_margin="20pt"
        android:text="Return \n ยืนยัน"
        android:textSize="15pt" />
</LinearLayout>
