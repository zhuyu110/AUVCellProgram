<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="685pt"
    android:layout_height="434pt"
    android:background="@drawable/border_diaog"
    android:layout_margin="2pt">

    <TextView
        android:id="@+id/time_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLose page after 20 seconds "
        android:textColor="@color/gray50"
        android:textSize="16px"
        android:layout_marginTop="28pt"
        android:layout_marginLeft="30pt"
        />
    <ImageView
        android:id="@+id/close_btn"
        android:layout_marginLeft="625pt"
        android:layout_marginTop="18pt"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:background="@mipmap/ic_close"/>

    <RelativeLayout
        android:id="@+id/sucess_btn"
        android:layout_marginTop="96pt"
        android:layout_marginLeft="128pt"
        android:layout_width="200pt"
        android:background="@drawable/green_border_bg"
        android:layout_height="230pt">
        <ImageView
            android:layout_marginTop="53pt"
            android:layout_centerHorizontal="true"
            android:layout_width="64pt"
            android:layout_height="64pt"
            android:background="@mipmap/ic_sucess"/>
        <TextView
            android:layout_marginTop="134pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20px"
            android:text="Return Good"/>
        <TextView
            android:layout_marginTop="162pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20px"
            android:text="ใช้งานได้"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fail_btn"
        android:layout_marginTop="96pt"
        android:layout_marginLeft="358pt"
        android:layout_width="200pt"
        android:background="@drawable/red_border_bg"
        android:layout_height="230pt">
        <ImageView
            android:layout_marginTop="53pt"
            android:layout_centerHorizontal="true"
            android:layout_width="64pt"
            android:layout_height="64pt"
            android:background="@mipmap/ic_fial"/>
        <TextView
            android:layout_marginTop="134pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20px"
            android:text="Return Fail"/>
        <TextView
            android:layout_marginTop="162pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20px"
            android:text="เครื่องเสีย"
            />
    </RelativeLayout>

</RelativeLayout>
